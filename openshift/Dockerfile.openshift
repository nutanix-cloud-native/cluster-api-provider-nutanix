FROM registry.ci.openshift.org/ocp/builder:rhel-9-golang-1.24-openshift-4.20 AS builder

WORKDIR /build
COPY . .
RUN GO111MODULE=on CGO_ENABLED=0 GOOS=${GOOS} GOPROXY=${GOPROXY} go build \
  -ldflags="-w -s -X 'main.version=${VERSION}'" \
  -o=cluster-api-provider-nutanix-controller-manager \
  main.go

FROM registry.ci.openshift.org/ocp/4.20:base-rhel9

LABEL description="Cluster API Provider Nutanix Controller Manager"

COPY --from=builder /build/cluster-api-provider-nutanix-controller-manager /bin/cluster-api-provider-nutanix-controller-manager
COPY --from=builder /build/openshift/manifests /manifests

ENTRYPOINT [ "/bin/cluster-api-provider-nutanix-controller-manager" ]

LABEL io.openshift.release.operator true
